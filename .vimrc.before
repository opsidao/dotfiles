let mapleader = ","

set hlsearch
set incsearch
set ignorecase
set smartcase

set colorcolumn=80
set cursorline

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

nmap <leader>j <C-W>j<C-W>_
nmap <leader>k <C-W>k<C-W>_

" Window minimum height
set wmh=0

" Context lines
set so=4

" tmux + terminal + vi
if has("mouse")
  set mouse=a
  set mousehide
  if &term =~ '^screen'
    " tmux knows the extended mouse mode
    set ttymouse=xterm2
  endif
endif
